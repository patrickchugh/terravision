{
  "permissions": {
    "allow": [
      "Read(./docs/**)",
      "Write(./docs/**)",
      "Glob(./docs/**)",
      "Read(.claude/**)",
      "Read(.specify/**)",
      "Glob(.specify/**)",
      "Bash(poetry run:*)",
      "Bash(pytest:*)",
      "Bash(git:*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(./secrets/**)"
    ],
    "additionalDirectories": [
      "./docs"
    ]
  },
  "env": {
    "DOCS_PATH": "docs",
    "SPECS_DIR": "docs/specs"
  }
}